<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/llMovimientoDetalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tvmontomovimientodetalle"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/border_ui"
            android:gravity="center"
            android:text="Monto Movimiento"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvfechadetallemov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_ui"
            android:gravity="center"
            android:text="fecha del movimiento"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvdescdetallemov"
            android:layout_width="match_parent"
            android:layout_height="345dp"
            android:background="@drawable/border_ui"
            android:gravity="center"
            android:text="Descripcion de movimiento"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llBotonesDetalleMovimient"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnatrasdetallemov"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Atras"
                android:onClick="atras"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>